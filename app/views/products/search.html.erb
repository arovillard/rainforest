<%= form_tag(search_path, method: "get") do %>
  <%= link_to "Back to all-products", products_path %> |
  <%= link_to "Create new product", new_product_path %> |
  <%= label_tag(:search, "Search for a product:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Results</h1>
<ul>
  <% @products.each do |product| %>
      <li>
        <%= link_to product_path(product) do %>
          <p>Product name: <%= product.name %> </p>
        <% end %>
        <img src="<%= product.picture_url %>" style="max-width: 100px;">
        <p>Description: <%= product.description %></p>
        <p>Price: $<%= product.formatted_price %></p>
      </li>
  <% end %>
</ul>
