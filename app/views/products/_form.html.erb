<%= form_for(@product) do |f| %>

  <div class="field">
    <%= f.label 'Product name' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Product description' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label 'Product price' %><br />
    <%= f.number_field :price_in_cents %>
  </div>
  <div class="actions">
    <%= f.submit 'create this product' %>
  </div>
<% end %>
